{
    "compilerOptions": {
      "jsx": "react-jsx",   
      "module": "ESNext",
      "moduleResolution": "Node",  
      "target": "ES6",
      "declaration": true,         
      "declarationDir": "dist",    
      "strict": true,              
      "esModuleInterop": true,     
      "skipLibCheck": true,        
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist", "public"]
  }
  